{% extends 'base2.html.twig' %}

{% block title %}Store{% endblock %}

{% block body %}
    <div class='title'>
        Stores	<a href="#" style="float: right;" class="light"></a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ store.id }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ store.Adresse }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ store.Tel }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ store.Description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('store_index') }}"><img src="{{ asset('assets/images/back.png') }}" alt="Symfony!" height="42" width="42" /></a>

    <a href="{{ path('store_edit', {'id': store.id}) }}"><img src="{{ asset('assets/images/edit.png') }}" alt="Symfony!" height="42" width="42" /></a>

    {{ include('store/_delete_form.html.twig') }}
{% endblock %}
