{% extends 'base2.html.twig' %}

{% block title %}Utilisateur index{% endblock %}

{% block body %}
    <div class='title'>
        Utilisateurs	<a href="#" style="float: right;" class="light"></a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Sexe</th>
                <th>Tel</th>
                <th>Adresse</th>
                <th>CodePostal</th>
                <th>Profile</th>
                <th>Email</th>
                <th>Username</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.Nom }}</td>
                <td>{{ utilisateur.Prenom }}</td>
                <td>{{ utilisateur.Sexe }}</td>
                <td>{{ utilisateur.Tel }}</td>
                <td>{{ utilisateur.Adresse }}</td>
                <td>{{ utilisateur.CodePostal }}</td>
                <td>{{ utilisateur.Profile }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>{{ utilisateur.username }}</td>
                <td>{{ utilisateur.password }}</td>
                <td>
                    <a href="{{ path('utilisateur_show', {'id': utilisateur.id}) }}"><img src="{{ asset('assets/images/show.png') }}" alt="Symfony!" height="42" width="42" /></a>
                    <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}"><img src="{{ asset('assets/images/edit.png') }}" alt="Symfony!" height="42" width="42" /></a>
                    <a href="{{ path('utilisateur_delete', {'id': utilisateur.id}) }}"><img src="{{ asset('assets/images/delete.png') }}" alt="Symfony!" height="42" width="42" /></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('utilisateur_new') }}"><img src="{{ asset('assets/images/add.png') }}" alt="Symfony!" height="42" width="42" /></a>
{% endblock %}
