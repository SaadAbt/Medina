{% extends 'base2.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <div class='title'>
        Factures	<a href="#" style="float: right;" class="light"></a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateFacture</th>
                <th>Total</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.DateFacture ? facture.DateFacture|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ facture.Total }}</td>
                <td>
                    <a href="{{ path('facture_show', {'id': facture.id}) }}"><img src="{{ asset('assets/images/show.png') }}" alt="Symfony!" height="42" width="42" /></a>
                    <a href="{{ path('facture_edit', {'id': facture.id}) }}"><img src="{{ asset('assets/images/edit.png') }}" alt="Symfony!" height="42" width="42" /></a>
                    <a href="{{ path('facture_delete', {'id': facture.id}) }}"><img src="{{ asset('assets/images/delete.png') }}" alt="Symfony!" height="42" width="42" /></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_new') }}"><img src="{{ asset('assets/images/add.png') }}" alt="Symfony!" height="42" width="42" /></a>
{% endblock %}
