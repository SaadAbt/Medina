{% extends 'base2.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <div class='title'>
        Commandes	<a href="#" style="float: right;" class="light"></a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>DateCommande</th>
                <td>{{ commande.DateCommande ? commande.DateCommande|date('Y-m-d H:i:s') : '' }}</td>
