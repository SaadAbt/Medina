{% extends 'base2.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <div class='title'>
        Produits	<a href="#" style="float: right;" class="light"></a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomProduit</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Quantite</th>
                <th>Remise</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.NomProduit }}</td>
                <td>{{ produit.Prix }}</td>
                <td>{{ produit.Description }}</td>
                <td>{{ produit.Quantite }}</td>
                <td>{{ produit.Remise }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <a href="{{ path('produit_show', {'id': produit.id}) }}"><img src="{{ asset('assets/images/show.png') }}" alt="Symfony!" height="42" width="42" /></a>
                    <a href="{{ path('produit_edit', {'id': produit.id}) }}"><img src="{{ asset('assets/images/edit.png') }}" alt="Symfony!" height="42" width="42" /></a>
                    <a href="{{ path('produit_delete', {'id': produit.id}) }}"><img src="{{ asset('assets/images/delete.png') }}" alt="Symfony!" height="42" width="42" /></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}"><img src="{{ asset('assets/images/add.png') }}" alt="Symfony!" height="42" width="42" /></a>
{% endblock %}
