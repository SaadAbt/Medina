{% extends 'base2.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <div class='title'>
        Produits	<a href="#" style="float: right;" class="light"></a>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>NomProduit</th>
                <td>{{ produit.NomProduit }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.Prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.Description }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.Quantite }}</td>
            </tr>
            <tr>
                <th>Remise</th>
                <td>{{ produit.Remise }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}"><img src="{{ asset('assets/images/back.png') }}" alt="Symfony!" height="42" width="42" /></a>
    <a href="{{ path('produit_edit', {'id': produit.id}) }}"><img src="{{ asset('assets/images/edit.png') }}" alt="Symfony!" height="42" width="42" /></a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
